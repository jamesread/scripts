#cloud-config
users:
  - name: root
    shell: /bin/bash
    ssh-authorized-keys:
      - ssh-rsa  jamesread@jread.com
chpasswd:
  list: |
    root:password
  expire: False
ssh_pwauth: True
disable_root: False
runcmd:
  - echo "PasswordAuthentication yes" >> /etc/ssh/sshd_config
  - echo "PermitRootLogin yes" >> /etc/ssh/sshd_config
  - service sshd restart
